{
  "name": "my-project",
  "private": true,
  "workspaces": ["apps/*"],
  "scripts": {
    "dev:backend": "npm run -w apps/backend dev",
    "dev:frontend": "npm run -w apps/frontend dev",
    "dev": "concurrently -n backend,frontend -c green,cyan \"npm:dev:backend\" \"npm:dev:frontend\"",
    "build": "npm run -w apps/frontend build",
    "start": "npm run -w apps/backend start",
    "sync": "npm run -w apps/backend sync"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
